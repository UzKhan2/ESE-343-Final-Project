<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteActivity">

    <RelativeLayout
        android:id="@+id/writeProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#800E0E0E">

        <ProgressBar
            android:id="@+id/writeProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/edtBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Book Name"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/edtBookAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Book Author"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:layout_below="@id/edtBookName"
        android:maxLines="1"
        />
    <EditText
        android:id="@+id/edtBookPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Book Price"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:layout_below="@id/edtBookAuthor"
        android:inputType="number"
        android:maxLines="1"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize=".5"
        android:layout_below="@id/edtBookPrice"
        android:layout_centerHorizontal="true"
        />


  <Button
      android:id="@+id/btnSaveToDrive"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#23AAE6"
      android:layout_alignParentBottom="true"
      android:text="Save To Drive"
      android:textSize="20sp"
      android:textColor="#000000"
      android:padding="10dp"
      />
</RelativeLayout>